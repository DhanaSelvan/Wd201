<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <script>
      function updateTodo(id) {
        fetch(`/todos/${id}/markAsCompleted`, {
          method: "put",
          headers: {"Content-Type": "application/json"}
        })
        .then((res) =>{
          if (res.ok){
          window.location.reload();
          }
        })
        .catch(err => console.log(err));
      }
      function deleteTodo(id) {
        fetch(`/todos/${id}`, {
          method: "delete",
          headers: {"Content-Type": "application/json"}
        })
        .then((res) =>{
          if (res.ok){
          window.location.reload();
          }
        })
        .catch(err => console.log(err));
      }
    </script>
  </head>
  <body>
    <div class="grid grid-cols-6 my-7">
      <div class="col-start-3 col-span-2">
        <%- include("header.ejs") %>
        <form action="/todos" method="post">
          <div class="flex gap-2 py-4">
            <div class="flex-auto">
              <input type="text" name="title" placeholder="What's Next?" required class="border border-gray-300 text-gray-900 rounded w-100 p-2">
            </div>
            <div class="flex-auto">
              <input type="date" name="dueDate" class="border border-gray-300 text-gray-900 rounded w-100 p-2 leading-4">
            </div>
            <div class="flex-none">
              <button type="submit" class="bg-green-600 text-white px-5 py-2 rounded font-medium">ADD</button>
            </div>
          </div>
        </form>
        <%- include('todos.ejs', {title: "Overdue" , data: overDue }) %>
        <%- include('todos.ejs', {title: "Due Today" , data: dueToday }) %>
        <%- include('todos.ejs', {title: "Due Later" , data: dueLater }) %>
      </div>
    </div>
  </body>
</html>
